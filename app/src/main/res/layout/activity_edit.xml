<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.sungshin.huddle.EditActivity.EditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs1"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:background="@drawable/www"

            android:layout_height="70dp"></android.support.design.widget.TabLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:weightSum="1">

        <Button
            android:id="@+id/btneditcancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="취소"
            android:textColor="#f0144b"
            android:layout_weight="0.2"
            android:background="#00ff0000" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.6"/>
        <Button
            android:id="@+id/btneditComplete"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="입력"
            android:textColor="#000000"
            android:layout_weight="0.2"
            android:background="#00ff0000"/>
    </LinearLayout>

</LinearLayout>